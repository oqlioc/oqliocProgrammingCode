<script language="javascript">
var One = null;
var Two = null;
//var Operator = null;
var OperTemp1;
var OperTemp2;

function InputNum(num) {
   var objText = document.getElementById("mainText");

      objText.value = objText.value + num;
}
function InOperator(oper) {
   var objText = document.getElementById("mainText");
//   Operator = document.getElementById("operBtn");
   OperTemp1 = oper;

    One = objText.value;
     objText.value = "";
   
}
function NumValue() {
   var objText = document.getElementById("mainText");
   Two = objText.value;
   
   switch (OperTemp1) {
   case '+':
      objText.value = parseFloat(One) + parseFloat(Two);
      break;
   case '-':
      objText.value = parseFloat(One) - parseFloat(Two);
      break;
   case '*':
      objText.value = parseFloat(One) * parseFloat(Two);
      break;
   case '/':
      objText.value = parseFloat(One) / parseFloat(Two);
      break;
   case 'x^y':
      objText.value = Math.pow(parseFloat(One), parseFloat(Two));
      break;
/*   case 'sin':
      objText.value = Math.sin(parseInt(One));
      break;
   case 'cos':
      objText.value = Math.cos(parseInt(One));
      break;
   case 'tan':
      objText.value = Math.tan(parseInt(One));
      break;
*/
   default:
      break;
   }
   
function InOperator2(oper) {
	   var objText = document.getElementById("mainText");
	   
	   OperTemp2 = oper;
	   One = objText.value;
	   objText.value = "";
	   
	   switch (OperTemp2) {
	   case 'sin':
	      objText.value = Math.sin(parseFloat(One));
	      break;
	   case 'cos':
	      objText.value = Math.cos(parseFloat(One));
	      break;
	   case 'tan':
	      objText.value = Math.tan(parseFloat(One));
	      break;
	   case '+/-':
	      objText.value = parseFloat(-One);
	      break;
	   default:
	      break;
	   }
}
/*
   if (optotal1.value == "+") {
      objText.value = parseInt(x) + parseInt(y);
   }else if (optotal1.value == "-") {
      objText.value = parseInt(x) - parseInt(y);
   }else if (optotal1.value == "*") {
      objText.value = parseInt(x) * parseInt(y);
   }else if (optotal1.value == "/") {
      objText.value = parseInt(x) / parseInt(y);
   }
*/
}


