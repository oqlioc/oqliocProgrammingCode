<script language="javascript">
var One = "0";
var Two = "0";
var Operator = "";
var OperTemp;

function InputNum(num) {
   var objText = document.getElementById("mainText");

      objText.value = objText.value + num;
}
function InOperator(oper) {
   var objText = document.getElementById("mainText");
   Operator = document.getElementById("operBtn");
   OperTemp = oper;

    One = objText.value;
      objText.value = "";
   
}
function NumValue() {
   var objText = document.getElementById("mainText");
   Two = objText.value;
   
   switch (OperTemp) {
   case '+':
      objText.value = parseInt(One) + parseInt(Two);
      break;
   case '-':
      objText.value = parseInt(One) - parseInt(Two);
      break;
   case '*':
      objText.value = parseInt(One) * parseInt(Two);
      break;
   case '/':
      objText.value = parseInt(One) / parseInt(Two);
      break;
   case 'x^y':
      objText.value = Math.pow(parseInt(One), parseInt(Two));
      break;
   case 'sin':
      objText.value = Math.sin(parseInt(One));
      break;
   case 'cos':
      objText.value = Math.cos(parseInt(One));
      break;
   case 'tan':
      objText.value = Math.tan(parseInt(One));
      break;
   default:
      break;
   }
   /*
   if (optotal1.value == "+") {
      objText.value = parseInt(x) + parseInt(y);
   }else if (optotal1.value == "-") {
      objText.value = parseInt(x) - parseInt(y);
   }else if (optotal1.value == "*") {
      objText.value = parseInt(x) * parseInt(y);
   }else if (optotal1.value == "/") {
      objText.value = parseInt(x) / parseInt(y);
   }
   */
}


</script>
