<script language="javascript">
var x = "0";
var y = "0";
var optotal1 = "";
var aaaa;

function num(i) {
   var objText = document.getElementById("display");

      objText.value = objText.value + i;
}
function op(c) {
   var objText = document.getElementById("display");
    optotal1 = document.getElementById("opbtn");
    aaaa = c;

      x = objText.value;
      objText.value = "";
   
}
function numSubmit() {
   var objText = document.getElementById("display");
   y = objText.value;
   
   switch (aaaa) {
   case '+':
      objText.value = eval(x) + eval(y);
      break;
   case '-':
      objText.value = parseInt(x) - parseInt(y);
      break;
   case '*':
      objText.value = parseInt(x) * parseInt(y);
      break;
   case '/':
      objText.value = parseInt(x) / parseInt(y);
      break;
   case 'x^y':
      objText.value = Math.pow(parseInt(x), parseInt(y));
      break;
   case 'sin':
      objText.value = Math.sin(parseInt(x));
      break;
   case 'cos':
      objText.value = Math.cos(parseInt(x));
      break;
   case 'tan':
      objText.value = Math.tan(parseInt(x));
      break;
   default:
      break;
   }
   /*
   if (optotal1.value == "+") {
      objText.value = parseInt(x) + parseInt(y);
   }else if (optotal1.value == "-") {
      objText.value = parseInt(x) - parseInt(y);
   }else if (optotal1.value == "*") {
      objText.value = parseInt(x) * parseInt(y);
   }else if (optotal1.value == "/") {
      objText.value = parseInt(x) / parseInt(y);
   }
   */
}


</script>
