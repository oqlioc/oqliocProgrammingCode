function numInput(i) {
	var objText = document.getElementById("tbString");
	var objNumBtn = document.getElementById("numBtn");
	var objPlusBtn = document.getElementById("plusBtn");

	objText.value = objText.value + i;

}

function operValue() {
	var objText = document.getElementById("tbString");
	var objNumBtn = document.getElementById("numBtn");
	var objOperBtn = document.getElementById("operBtn");

	objText.value = eval(objText.value);
	
}
