      objText.value = "";
}
function IuputNum() {
   var objText = document.getElementById("OutputText");
   num2 = objText.value;
   
   switch (OpTemp) {
   case '+':
      objText.value = parseInt(num1) + parseInt(num2);
      break;
   case '-':
      objText.value = parseInt(num1) - parseInt(num2);
      break;
   case '*':
      objText.value = parseInt(num1) * parseInt(num2);
      break;
   case '/':
      objText.value = parseInt(num1) / parseInt(num2);
      break;
   case 'x^y':
      objText.value = Math.pow(parseInt(num1), parseInt(num2));
      break;
   case 'sin':
      objText.value = Math.sin(parseInt(num1));
      break;
   case 'cos':
      objText.value = Math.cos(parseInt(num1));
      break;
   case 'tan':
      objText.value = Math.tan(parseInt(num1));
      break;
   default:
      break;
   }
   /*
   if (optotal1.value == "+") {
      objText.value = parseInt(x) + parseInt(y);
   }else if (optotal1.value == "-") {
      objText.value = parseInt(x) - parseInt(y);
   }else if (optotal1.value == "*") {
