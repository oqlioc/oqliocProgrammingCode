    <td colspan="2">
    <input type="button" value="Clear" onclick="clearDisplay()" style="height:100%;width:100%;"></td>
    <td colspan="3">
    <input type="button" value="Enter" onclick="sum()" style="height:100%;width:100%;"></td>
</tr>
