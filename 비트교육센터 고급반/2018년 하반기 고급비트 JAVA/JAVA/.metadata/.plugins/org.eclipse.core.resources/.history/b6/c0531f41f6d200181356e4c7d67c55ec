<title>하이퍼링크</title>
<script language="javascript">
var One = null;  // 첫번째 숫자
var Two = null;  // 두번째 숫자
var OperTemp1;
var OperTemp2;
 
function NumInput(num) {  // 패드 입력
    var objText = document.getElementById("display");
 
        objText.value = objText.value + num;
}
function op(c) {  // 연산자 입력
    var objText = document.getElementById("display");
    OperTemp1 = c;
 
     One = objText.value;
        objText.value = "";
 
}
function numSubmit() {  // = 연산자
    var objText = document.getElementById("display");
 
    Two = objText.value;
    
    switch (OperTemp1) {
    case '+':
        objText.value = parseFloat(One) + parseFloat(Two);
        break;
    case '-':
        objText.value = parseFloat(One) - parseFloat(Two);
        break;
    case '*':
        objText.value = parseFloat(One) * parseFloat(Two);
        break;
    case '/':
        objText.value = parseFloat(One) / parseFloat(Two);
        break;
    case 'x^y':
        objText.value = Math.pow(parseFloat(One), parseFloat(Two));
        break;
    default:
        break;
    }
 
}
function oper(c) {
    var objText = document.getElementById("display");
    
    OperTemp2 = c;
    One = objText.value;
    objText.value = "";
    
    switch (OperTemp2) {
    case 'sin':
        objText.value = Math.sin(parseFloat(One));
        break;
    case 'cos':
        objText.value = Math.cos(parseFloat(One));
        break;
    case 'tan':
        objText.value = Math.tan(parseFloat(One));
        break;
    case '+/-':
        objText.value = parseFloat(-One);
        break;
    default:
        break;
    }
}
</script>
</head>
<body>
<form action="calculadora">
    <table  width="50%" hight="100" style="text-align: center;" >
        <tr>
            <td><input type="text" id="display" size="50" value=""></td>
        </tr>
        <tr>
            <td>
                <input type="reset" id="reset" value="Clear"  style="width: 80px; height: 40px;">
                <input onclick="numSubmit()" type="button" id="submit" value="=" style="width: 80px;height: 40px;">
            </td>
        </tr>
        <tr>
            <td>
                <input onclick="NumInput(1)" type="button" value="1" style="width: 50px; height: 40px;">
                <input onclick="NumInput(2)" type="button" value="2" style="width: 50px; height: 40px;">
                <input onclick="NumInput(3)" type="button" value="3" style="width: 50px; height: 40px;">
                <input onclick="op(this.value)" id="opbtn" type="button" value="+" style="width: 50px; height: 40px; margin-left: 15px; margin-right: 15px;">
                <input onclick="op(this.value)" id="opbtn"type="button" value="x^y" style="width: 50px; height: 40px;">
            </td>
        </tr>
        <tr>
            <td>
                <input onclick="NumInput(4)" type="button" value="4" style="width: 50px; height: 40px;">
                <input onclick="NumInput(5)" type="button" value="5" style="width: 50px; height: 40px;">
                <input onclick="NumInput(6)" type="button" value="6" style="width: 50px; height: 40px;">
                <input onclick="op(this.value)" id="opbtn" type="button" value="-" style="width: 50px; height: 40px; margin-left: 15px; margin-right: 15px;">
                <input onclick="oper(this.value)" id="opbtn" type="button" value="sin" style="width: 50px; height: 40px;">
            </td>
        </tr>
        <tr>
            <td>
                <input onclick="NumInput(7)" type="button" value="7" style="width: 50px; height: 40px;">
                <input onclick="NumInput(8)" type="button" value="8" style="width: 50px; height: 40px;">
                <input onclick="NumInput(9)" type="button" value="9" style="width: 50px; height: 40px;">
                <input onclick="op(this.value)" id="opbtn" type="button" value="*" style="width: 50px; height: 40px; margin-left: 15px; margin-right: 15px;">
                <input onclick="oper(this.value)" id="opbtn" type="button" value="cos" style="width: 50px; height: 40px;">
            </td>
        </tr><tr>
            <td>
                <input onclick="NumInput(0)" type="button" value="0" style="width: 50px; height: 40px;">
                <input onclick="oper(this.value)"type="button" value="+/-" style="width: 50px; height: 40px;">
                <input onclick="NumInput('.')" type="button" value="." style="width: 50px; height: 40px;">
                <input onclick="op(this.value)" id="opbtn" type="button" value="/" style="width: 50px; height: 40px; margin-left: 15px; margin-right: 15px;">
                <input onclick="oper(this.value)" id="opbtn" type="button" value="tan" style="width: 50px; height: 40px;">
            </td>
