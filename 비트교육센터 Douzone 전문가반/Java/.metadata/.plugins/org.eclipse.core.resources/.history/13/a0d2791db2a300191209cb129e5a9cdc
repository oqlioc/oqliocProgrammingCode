package test1;

public class test2 {
	public static void main(String[] args) {
		
		int n = 11;
		int a = 0;
		
		while(true) {
			a++;
			if (n != 1) {
				if (n % 2 == 0) {
					n = n / 2;
					System.out.println(n);
				}else {
					n = n * 3 + 1;
					System.out.println(n);
				}
			}else {
				break;
			}
		}
	}
}
